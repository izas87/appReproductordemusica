<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".MainActivity2">

    <ImageView
        android:id="@+id/frontpage2"
        android:layout_width="382dp"
        android:layout_height="292dp"
        android:foregroundGravity="center"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/portada2"/>


    <TextView
        android:id="@+id/songtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Du Hast"
        android:textAlignment="center"
        android:textColor="#910D0D"
        android:textSize="42sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frontpage2" />

    <ImageView
        android:id="@+id/btn_back2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toStartOf="@id/btn_stop2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/songtitle"
        app:srcCompat="@drawable/btn_back" />

    <ImageView
        android:id="@+id/btn_stop2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="@id/btn_back2"
        app:layout_constraintEnd_toStartOf="@id/btn_play2"
        app:layout_constraintStart_toEndOf="@id/btn_back2"
        app:layout_constraintTop_toBottomOf="@id/songtitle"
        app:srcCompat="@drawable/btn_stop" />

    <ImageView
        android:id="@+id/btn_play2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="@id/btn_stop2"
        app:layout_constraintEnd_toStartOf="@id/btn_reload2"
        app:layout_constraintStart_toEndOf="@id/btn_stop2"
        app:layout_constraintTop_toBottomOf="@id/songtitle"
        app:srcCompat="@drawable/btn_play" />

    <ImageView
        android:id="@+id/btn_reload2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="@id/btn_play2"
        app:layout_constraintEnd_toStartOf="@id/btn_next2"
        app:layout_constraintStart_toEndOf="@id/btn_play2"
        app:layout_constraintTop_toBottomOf="@id/songtitle"
        app:srcCompat="@drawable/btn_reload" />

    <ImageView
        android:id="@+id/btn_next2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="@id/btn_reload2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_reload2"
        app:layout_constraintTop_toBottomOf="@id/songtitle"
        app:srcCompat="@drawable/btn_next" />

</androidx.constraintlayout.widget.ConstraintLayout>