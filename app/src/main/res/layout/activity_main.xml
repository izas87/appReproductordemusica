<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/frontpage1"
        android:layout_width="360dp"
        android:layout_height="195dp"
        android:foregroundGravity="center"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/portada" />


    <TextView
        android:id="@+id/songtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Du riechst so gut"
        android:textAlignment="center"
        android:textColor="#910D0D"
        android:textSize="42sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frontpage1" />

 <ImageView
     android:id="@+id/btn_back1"
     android:layout_width="60dp"
     android:layout_height="60dp"
     android:layout_marginTop="76dp"
     app:layout_constraintEnd_toStartOf="@id/btn_stop1"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@id/songtitle"
     app:srcCompat="@drawable/btn_back" />

 <ImageView
        android:id="@+id/btn_stop1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="@id/btn_back1"
        app:layout_constraintEnd_toStartOf="@id/btn_play1"
        app:layout_constraintStart_toEndOf="@id/btn_back1"
        app:layout_constraintTop_toBottomOf="@id/songtitle"
        app:srcCompat="@drawable/btn_stop" />

    <ImageView
        android:id="@+id/btn_play1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="@id/btn_stop1"
        app:layout_constraintEnd_toStartOf="@id/btn_reload1"
        app:layout_constraintStart_toEndOf="@id/btn_stop1"
        app:layout_constraintTop_toBottomOf="@id/songtitle"
        app:srcCompat="@drawable/btn_play" />

    <ImageView
        android:id="@+id/btn_reload1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="@id/btn_play1"
        app:layout_constraintEnd_toStartOf="@id/btn_next1"
        app:layout_constraintStart_toEndOf="@id/btn_play1"
        app:layout_constraintTop_toBottomOf="@id/songtitle"
        app:srcCompat="@drawable/btn_reload" />

 <ImageView
     android:id="@+id/btn_next1"
     android:layout_width="60dp"
     android:layout_height="60dp"
     app:layout_constraintTop_toTopOf="@id/btn_reload1"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintStart_toEndOf="@id/btn_reload1"
     app:layout_constraintTop_toBottomOf="@id/songtitle"
     app:srcCompat="@drawable/btn_next" />

    <TextView
        android:id="@+id/descripción1"
        style="@style/Demostracion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripción"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.584"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_back1"
        app:layout_constraintVertical_bias="0.117"/>

</androidx.constraintlayout.widget.ConstraintLayout>